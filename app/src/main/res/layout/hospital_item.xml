<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/ic_banner_background"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="374dp"
        android:layout_height="206dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="20dp"
        android:elevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="362dp"
            android:layout_height="match_parent"
            android:background="@color/ic_banner_background">

            <TextView
                android:id="@+id/hospitalNameView"
                android:layout_width="199dp"
                android:layout_height="51dp"
                android:layout_marginTop="52dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#333232"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hospitalLevelView"
                android:layout_width="94dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#2B2828"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hospitalNameView"
                app:layout_constraintVertical_bias="0.827" />

            <TextView
                android:id="@+id/hospiralAddresView"
                android:layout_width="105dp"
                android:layout_height="59dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#272525"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/hospitalNameView" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="141dp"
                android:layout_height="184dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_baseline_healing_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.243" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>