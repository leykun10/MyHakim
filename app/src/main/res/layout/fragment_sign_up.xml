<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth_fragments.signUp_fragment.signUpFragment">

    <EditText
        android:id="@+id/editEmailAddress"
        android:layout_width="307dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:textColor="#332F2F"
        android:textColorHint="#1C1B1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameEditText" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="307dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/edit_text_custom"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#332F2F"
        android:textColorHint="#3A3636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailAddress" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="121dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/auth_custom_btn"
        android:text="@string/sign_up"
        android:textColor="#F8F4F4"
        app:backgroundTint="@color/btn_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPassword" />

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="307dp"
        android:layout_height="62dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_custom"
        android:hint="@string/username"
        android:textColor="#332F2F"
        android:textColorHint="#131212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="159dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:text="sign in"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="205dp"
        android:layout_height="56dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="68dp"
        android:layout_marginTop="68dp"
        android:src="@drawable/ic_baseline_healing_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>